generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id              String       @id @default(uuid())
  name            String
  about           String
  Age             String
  Size            String
  energy          String
  independency    String
  environment     String
  requirements    String[]
  created_at      DateTime     @default(now())
  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String

  @@map("pets")
}

model Organization {
  id            String   @id @default(uuid())
  owner         String
  email         String   @unique
  cep           Int
  address       String
  number        Int
  password_hash String
  created_at    DateTime @default(now())
  pets          Pet[]

  @@map("organizations")
}
